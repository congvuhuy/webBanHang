@model PagedList.PagedList<WebsiteBanHang.Models.EF.Product>
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Product" class="nav-link">Sản phẩm</a>
        </li>

    </ul>
}
<link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin/Home">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Sản phẩm</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Content Header (Page header) -->
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách Sản phẩm</h3>
            <div class="card-tools">
                <a href="/Admin/Product/Add" class="btn btn-primary">Thêm mới</a>
                <a href="#" class="btn btn-danger btnDeleteAll">Xóa</a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-4">
                    @using (Html.BeginForm("Index", "Product", FormMethod.Get, new { }))
                    {
                        <div class="input-group input-group-sm">
                            @Html.TextBox("SearchText")
                            <span class="input-group-append">
                                <button type="submit" class="btn btn-info btn-flat">Tìm kiếm</button>
                            </span>
                        </div>
                    }

                </div>
            </div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th style="width:100px;"><input type="checkbox" id="selectAll" />All</th>
                        <th>STT</th>
                        <th>Hình ảnh</th>
                        <th>Tên sản phẩm</th>
                        <th>Danh mục</th>
                        <th>Số lượng</th>
                        <th>Giá</th>
                        <th>Ngày tạo</th>
                        <th>Hiển thị</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        int i = 1;
                        foreach (var item in Model)
                        {
                            int a = (ViewBag.page - 1) * 5 + i;
                            var StrCheck = @item.IsActive ? "<i class='fas fa-check text-success'></i>" : "<i class='fas fa-times text-danger'></i>";

                            <tr id="trow_@item.Id">
                                <td><input type="checkbox" class="select" value="@item.Id" /></td>
                                <td>@a</td>
                                <td><img class="imgproduct" data-id="@item.Id" src="@item.Image" width="50" /></td>
                                <td>@item.Title</td>
                                <td>@item.ProductCategory.Title</td>
                                <td>@item.Quantity</td>
                                <td>@item.Price đ</td>
                                <td>@item.CreateDate.ToString("dd/MM/yyyy")</td>
                                <td> <a href="#" data-id="@item.Id" class="btnActive px-3">@Html.Raw(StrCheck)</a></td>
                                <td>
                                    <a href="/Admin/Product/Edit/@item.Id" class="btn btn-danger">Sửa</a>
                                    <a href="#" data-id="@item.Id" class="btn btn-primary btnDelete">Xóa</a>

                                </td>
                            </tr>

                            i++;
                        }

                    }
                    else
                    {
                        <tr>
                            <td colspan="4">
                                Không có bản ghi nào
                            </td>
                        </tr>

                    }
                </tbody>

            </table>
            <div class="row">
                <div class="col-6"></div>
                <div class="col-6" style="text-align:right">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>

        </div>
        <!-- /.card-body -->
        @*<div class="card-footer">
                Footer
            </div>*@
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->
</section>
<div id="dialog">
    <iframe id="myIframe" style="border: 0; width: 100%; height: 100%;"></iframe>
</div>
<!-- /.content -->

@section scripts{
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
    <script>
        $("#dialog").dialog({
            autoOpen: false,
            show: "fade",
            hide: "fade",
            modal: true,
            height: '600',
            width: '700',
            resizable: true,
            title: 'Quản lý ảnh sản phẩm',
            close: function () {
                window.location.reload();
            }
        });
        $('body').on("click", ".imgproduct", function () {
            var proid = $(this).attr("data-id");
            $("#dialog #myIframe").attr("src", "/admin/ProductImage/Index?id=" + proid);
            $('#dialog').dialog('open');
            return false;
        });
        $('body').on('click', '.btnDeleteAll', function (e) {
            e.preventDefault();
            var str = "";
            var i = 0;
            var checkItem = $(this).parents('.card').find('tr td input:checkbox');
            checkItem.each(function () {
                if (this.checked) {
                    var item = $(this).val();
                    if (i === 0) {
                        str += item;
                    } else {
                        str += "," + item;
                    }
                    i++;
                } else {
                    checkItem.attr('selected', '');
                }
            });
            var conf = confirm("Xác nhân xóa tất cả Sản phẩm trên");
            if (conf) {
                $.ajax({
                    url: '/Admin/Product/DeleteAll',
                    type: 'POST',
                    data: { ids: str },
                    success: function (rs) {
                        if (rs.success) {
                            location.reload();
                        }
                    }
                });
            }

        });
        $('body').on('change', '#selectAll', function () {

            var checkStatus = this.checked;
            var checkItem = $(this).parents('.card-body').find('tr td input:checkbox');
            checkItem.each(function () {
                this.checked = checkStatus;
                if (this.checked) {
                    checkItem.attr('selected', 'checked');
                } else {
                    checkItem.attr('selected', '');
                }
            });
        });

        $('body').on('click', '.btnDelete', function () {
            var id = $(this).data("id");
            var conf = confirm("Xac nhan xoa!");
            if (conf === true) {
                $.ajax({
                    url: '/Admin/Product/Delete',
                    type: 'POST',
                    data: { id: id },
                    success: function (rs) {
                        if (rs.success) {
                            $('#trow_' + id).remove();
                        }
                    }
                });
            }
        });
        $('body').on('click', '.btnActive', function (e) {
            e.preventDefault();
            var btn = $(this)
            var id = btn.data("id");

            $.ajax({
                url: '/Admin/Product/Active',
                type: 'POST',
                data: { id: id },
                success: function (rs) {

                    if (rs.success) {
                        if (rs.IsActives) {
                            btn.html("<i class='fas fa-check text-success'></i>");
                        } else {
                            btn.html("<i class='fas fa-times text-danger'></i>");

                        }
                    }
                }
            });


        });
                    //});
    </script>
}